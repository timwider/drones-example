<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    android:id="@+id/root_card_layout"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_flight_dates"
            android:layout_width="wrap_content"
            tools:text="Период: 29 июля 16:00 - 29 июля 18:00"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_drone_model_fp"
            android:layout_width="wrap_content"
            tools:text="Модель: Drone Model X"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_flight_dates"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_favorite"
            android:src="@drawable/ic_no_favorite"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="10dp"
            android:layout_height="0dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>